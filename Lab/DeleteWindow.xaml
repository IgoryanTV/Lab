<Window x:Class="Lab.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab"
        xmlns:res="clr-namespace:Lab.Resources"
        mc:Ignorable="d"
        Title="Удаление записи" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="{x:Static res:UIResources.DeleteDialog}" TextAlignment="Center" FontSize="20"/>

        <WrapPanel Grid.Row="1" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Click="Accept_Click" Content="{x:Static res:UIResources.OK}" Width="100" Height="40" Margin="0,0,10,0"/>
            <Button IsCancel="True" Content="{x:Static res:UIResources.Cancel}" Width="100" Height="40"/>
        </WrapPanel>

    </Grid>
</Window>
